<view class="bg_gray normal_fontsize">

  <view class="tenants_box flex_row_between">
    <image class=avatar" src="{{avatarUrl}}" mode="aspectFill"/>
    <view>
      <view style="font-size: 44rpx;">
        <text>{{am.apartmentName}} </text>
        <_icon wx:if="{{myApartments.length > 1}}" icon_name="switches" text="切换公寓" color="#97a97c" size="24" bindtap="onSwitchMyApart" />
      </view>
      <view>{{am.address}}</view>
      <view>{{am.registeringDay}} 注册</view>
    </view>
    <view class="addApartment" bindtap="addApartment">
      <_icon icon_name="jia" color="#97a97c" size="50" />
      <view>添加公寓</view>
    </view>
  </view>

  <view class="box">
    <l-list title="所有房间" id="{{am._id}}" bindtap="gotoRoomlist" right-desc="管理"/>
    <l-list wx:if="{{level===1}}" title="公寓收入" right-desc="看看账"  url="/pages/accounts/accounts?id={{am._id}}"/>
    <l-list title="公寓支出" right-desc="记一笔"  url="/pages/outlay/outlay?id={{am._id}}"/>
    <!-- <l-list title="违约黑名单" desc="合同违约租户" right-desc="上传"  url="/pages/blacklist/blacklist"/> -->
    <l-list title="公寓押金总计" right-desc="{{am.totalDeposit}}元"  is-link="{{false}}"/>
    <l-list title="新住审核" right-desc="审核" url="/pages/approving/approving?id={{am._id}}"/>
    <l-list title="操作退房" right-desc="退房" url="/pages/checkingout/checkingout?id={{am._id}}"/>
  
