  <view wx:if="{{permitsExpiring.length > 0}}" class="gap box">
    <view class="box_title">暂住证过期提醒</view>
    <view wx:for="{{permitsExpiring}}" wx:key="index">
      <l-list title="{{item.roomNo}}房间" url="/pages/roomdetails/roomdetails?id={{item.roomId}}"/>
    </view>
  </view>

  <page-container show="{{show}}" round custom-style="text-align:center;">
    <view wx:if="{{showApartList}}" style="padding: 32rpx;color: #97a97c;">
      <block wx:for="{{myApartments}}" wx:key="index">
        <l-list title="{{item.name}}" bindtap="onSelectMyApart" id="{{item.id}}"></l-list>
