var warn = function(expiredIn) {
  var today = getDate()
  var date = getDate(expiredIn)
  var _diffDays = (date - today)/(24*60*60*1000)

  if(_diffDays<0){
    // diff 小于0：已过期
    _diffDays = Math.floor(_diffDays)
  } else {
    // diff 大于0： 将要过期
    _diffDays = Math.ceil(_diffDays)
  }

  if(_diffDays <= 0){
    return '已过期'+Math.abs(_diffDays+1)+'天'
  } else if(_diffDays > 0 && _diffDays <= 30){
    return Math.abs(_diffDays)+'天后过期'
  }
}

module.exports = {
  warn: warn
}